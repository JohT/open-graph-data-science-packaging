{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:nonOfficeHours",
    ":combinePatchMinorReleases",
    ":automergeDigest",
    ":automergePatch",
    ":automergeMinor",
    ":automergeRequireAllStatusChecks"
  ],
  "ignoreUnstable": false,
  "packageRules": [
    {
      "description": "Neo4j one month old",
      "matchDepNames": [
        "neo4j/neo4j"
      ],
      "matchUpdateTypes": [
        "minor",
        "major"
      ],
      "minimumReleaseAge": "1 month"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^(workflow-templates|\\.github/workflows)/[^/]+\\.ya?ml$",
        "(^|/)action\\.ya?ml$"
      ],
      "matchStrings": [
        "gds-version:\\s+(?<currentValue>.*?)\\n"
      ],
      "depNameTemplate": "neo4j/graph-data-science",
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "maven"
    },
    {
      "description": "Update Neo4j version in GitHub Action",
      "customType": "regex",
      "fileMatch": [
        "^(workflow-templates|\\.github\/workflows)\\/[^/]+\\.ya?ml$",
        "(^|\\/)action\\.ya?ml$]"
      ],
      "matchStrings": [
        "neo4j-version:\\s+?(?<currentValue>.*?)\\s+"
      ],
      "depNameTemplate": "neo4j/neo4j",
      "datasourceTemplate": "github-tags"
    }
  ]
}